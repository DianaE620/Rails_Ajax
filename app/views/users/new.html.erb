
<h1>Crearemos un nuevo usuario</h1>

<br><br>

<%= form_for @user do |u| %>
  Nombre: <br>
  <%= u.text_field :name %><br><br>
  Email: <br>
  <%= u.text_field :email %><br><br>
  Password: <br> 
  <%= u.password_field :password %><br><br>
  <%= u.submit "Create" %>
<% end %>

<% if @error %>
  
  <p class="error"><%= @errores.messages[:email].join %></p>
  <p class="error"><%= @errores.messages[:name].join %></p>

<% end %>

<br><br>
<%= link_to 'Index', root_path()%>